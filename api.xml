<!--

    Hier mein Vorschlag: der Server liefert (wenn die HTTP–Authentifizierung
    geklappt hat) eine einzige XML–Datei aus. Die URL wäre entsprechend
    simpel. z.B. http://pitouchserver/config.xml

    Die Datei hat folgendes Format:

-->

<client xresolution="PIXEL"
        yresolution="PIXEL"
        color="COPRORATE IDENTITY RGB"
        is_blocked="yes">
    <location latitude="" longitude=""/>
    <address>
         <name>
         <street>
         <city>
         <zip>
         <phone>
         <email>
     </address>
    <media/>                <!-- Werbung bei Anwendungsstart -->
    <loop>                  <!-- Modul "Loop" bei inaktivität -->
        <medialist is_interruptable="yes"/>
        <medialist/>
    </loop>
    <pi x="" y="" size=""/> <!-- Position und Größe des Pucks beim Start -->
    <modules/>              <!-- Die Module und ihre Konfigurationen --> 
</client>


<!-- Bilder/Videos/PDFs -->
<!--
    Statt unterschiedlichen Elementen allet eine Soße. Die Dateiendung
    entscheidet.
-->

<media id=""
       src="URL"
       x=""
       y=""
       rotation="GRADZAHL"
       size="%"
       link=""/>


<!-- Links

    Es gibt die gewöhnlichen HTTP–URLs für sämtliche Dateien.
    Links to bestimmten Modulinhalten haben die Form:

    /modulname/medien-ID/[PDF-Seite]

-->


